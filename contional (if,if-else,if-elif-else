#include <stdio.h>

int main() {
    int marks;

    printf("Enter your marks: ");
    scanf("%d", &marks);

    // if statement
    if (marks == 100) {
        printf("Perfect Score!\n");
    }

    // if-else statement
    if (marks >= 40) {
        printf("You Passed!\n");
    } else {
        printf("You Failed!\n");
    }

    // if-elif-else ladder
    if (marks >= 90) {
        printf("Grade: A\n");
    }
    else if (marks >= 75) {
        printf("Grade: B\n");
    }
    else if (marks >= 60) {
        printf("Grade: C\n");
    }
    else if (marks >= 40) {
        printf("Grade: D\n");
    }
    else {
        printf("Grade: F\n");
    }

    return 0;
}
